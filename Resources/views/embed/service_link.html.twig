<!-- START EMBED SERVICE LINK -->
<div class="row liste ">
    <div class="col-md-12">
        <div class="row  {% if loop % 2 == 1 %} listeBackground {% endif %} listeBorder ">
            <div class="hidden-xs hidden-sm col-md-2">
                {% set image= get_content(ez_field_value(content,"logo" )) %}
                {% if image %}
                    <a href="{{ ez_field_value(content,'url' )}}">{{ ez_render_field( image, "image", {parameters:{ alias:'service_link', no_tag: true} } ) }}</a>
                {% endif %}                 
            </div>
            <div class="col-xs-11 col-sm-11  col-md-9">    
                <p>
                    <span class="title">
                        <a href="{{ ez_field_value(content,'url' )}}">{{ ez_field_value(content,'title' )}}</a>
                    </span>
                </p>
                <p class="align-justify">
                    {{ ez_field_value(content,'presentation' )}}
                </p>
            </div>
            <div class="col-md-1">
                <input type="checkbox" class="service_subscription_checkbox" name="service_{{userId}}_{{content.id}}_{{location.parentLocationId}}" {% if checkbox %}checked="checked"{% endif %} />
            </div>                    
        </div>
    </div>
</div>
<!-- END EMBED SERVICE LINK -->